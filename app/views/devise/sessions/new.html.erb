<div class="row">
  <div class="col text-center form-signin">
    <h3 class="mb-3" >Ingreso</h3>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-floating">
        <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: :email %>
        <%= f.label :email %>
      </div>

      <div class="form-floating">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: :password %>
        <%= f.label :password %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-3 mt-2">
          <%= f.check_box :remember_me  %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Ingresar", class: "w-100 btn btn-lg btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
